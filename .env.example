# Rekan environment variables
# Copy to .env and fill in real values: cp .env.example .env

# -- API (Go / PocketBase) --

# Asaas payment provider. Sandbox: https://sandbox.asaas.com, Production: https://www.asaas.com
ASAAS_API_KEY=
ASAAS_WEBHOOK_TOKEN=

# Public URL where the SvelteKit frontend is served (used for invite links)
APP_URL=https://rekan.com.br

# OpenAI key for Whisper voice transcription (optional, voice notes ignored if unset)
OPENAI_API_KEY=

# Set to "true" to disable rate limits and use Asaas sandbox
DEV_MODE=false

# -- Eval pipeline (BAML / OpenRouter) --

# Used by content generation and LLM judges
OPENROUTER_API_KEY=

# -- Rekan post skill (image generation) --

# Google Gemini API key for image generation
GEMINI_API_KEY=

# -- Web (SvelteKit/Vite) --

# Elenice's WhatsApp number in E.164 format without the + (e.g. 5511999999999)
PUBLIC_WHATSAPP_NUMBER=

# -- Dev seed (make seed) --

# Defaults shown below; override in .env to use different credentials
# SEED_ADMIN_EMAIL=admin@rekan.local
# SEED_ADMIN_PASSWORD=admin1234567
# SEED_USER_EMAIL=operador@rekan.local
# SEED_USER_PASSWORD=senha1234567

# -- Backup (PocketBase built-in, daily at 03:00, keeps 7) --

# GCS S3-compatible credentials (create an HMAC key in the GCS console)
GCS_BACKUP_BUCKET=
GCS_BACKUP_REGION=auto
GCS_BACKUP_ACCESS_KEY=
GCS_BACKUP_SECRET=
